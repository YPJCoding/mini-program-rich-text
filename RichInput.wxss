/* xhsframework/component/RichInput/RichInput.wxss */
.title {
    font-size: 16px;
    color: #222222;
    padding: 16px 0;
    border-bottom: 1px solid #EEEEEE;
}

.placeholder_text {
    font-size: 26rpx;
    color: #D2D2D2;
}

.projectTitle {
    margin: 16px 0 30px 0;
}

.img_btn {
    width: 40rpx;
    height: 40rpx;
}

.delBtn {
    width: 24rpx;
    height: 24rpx;
}

.richText {
    padding: 16px;
    background-color: #F8F8F8;
}

.richImage {
    width: 100%;
}

.richText .textarea {
    width: 100%;
    height: 100px;
}

.richText .tools {
    display: flex;
}


.richText .tools .tool_item {
    display: flex;
    flex-direction: column;
    margin-right: 16px;
    font-size: 20rpx;
    color: #bbbbbb;
    width: 32px;
}


.item_image {
    width: 32px;
    height: 32px;
}

.item_title {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 4rpx;
}

.titleBox {
    align-items: center;
}

.richText .textItem .titleBox {
    position: relative;
    display: flex;
    margin-bottom: 10px;
}

.richText .textItem .titleBox .upBtn {
    margin: 0 0 0 16px;
}

.downBtn {
    margin-left: 32rpx;
}

.richText .textItem .titleBox .delBtn {
    position: absolute;
    right: 0;
}

.richText .textItem .addBtn {
    margin: 10px 0;
    text-align: center;
}

.placeholder_area {
    z-index: 1;
}

.icon_tips {
    width: 24rpx;
    height: 30rpx;
    margin-right: 14rpx;
}